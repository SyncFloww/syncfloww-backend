# Example environment variables for Syncflow Django project

# Django settings
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL for email confirmation redirects
FRONTEND_URL=http://localhost:3000

# Google OAuth2 credentials
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth2 credentials
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# DRF Spectacular settings
SPECTACULAR_SETTINGS_TITLE=SyncflowAI API
SPECTACULAR_SETTINGS_DESCRIPTION=API for SyncflowAI social media marketing platform
SPECTACULAR_SETTINGS_VERSION=1.0.0

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=webmaster@example.com

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
